@{
}

@model Entertainers
@{
    ViewData["Title"] = "Delete Entertainer";
}

<h2>Delete Entertainer</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2>@Model.EntStageName</h2>
                </div>
                <div class="card-body">
                    <p>Entertainer ID: @Model.EntertainerId</p>
                    <p>Address: @Model.EntStreetAddress @Model.EntCity, @Model.EntState @Model.EntZipCode</p>
                    <p>Phone Number: @Model.EntPhoneNumber</p>
                    <p>Email: @Model.EntEmailAddress</p>
                    <p>Website: @Model.EntWebPage</p>
                    <p>Social Security Number (pls don't share this!): @Model.EntSsn</p>
                    <p>Date Entered: @Model.DateEntered</p>
                    <p></p>
                </div>
            </div>
        </div>
    </div>
</div>

<form asp-action="Delete" asp-controller="Home" asp-route-id="@Model.EntertainerId" method="post">
    <input type="hidden" asp-for="EntertainerId" />

    <p>Are you sure you want to delete this Entertainer?</p>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Details" asp-route-id="@Model.EntertainerId" asp-controller="Home" class="btn btn-secondary">Cancel</a>
</form>