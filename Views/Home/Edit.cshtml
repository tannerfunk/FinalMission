@{
}
@model Entertainers

@{
    ViewData["Title"] = "Edit Entertainer";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2>Edit @Model.EntStageName</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" asp-controller="Home" asp-route-id="@Model.EntertainerId" method="post">
                        <input type="hidden" asp-for="EntertainerId" />
                        <div class="form-group">
                            <label asp-for="EntStageName">Stage Name</label>
                            <input asp-for="EntStageName" class="form-control" required />
                            <span asp-validation-for="EntStageName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EntStreetAddress">Street Address</label>
                            <input asp-for="EntStreetAddress" class="form-control" required />
                            <span asp-validation-for="EntStreetAddress" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EntCity">City</label>
                            <input asp-for="EntCity" class="form-control" required />
                            <span asp-validation-for="EntCity" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EntState">State</label>
                            <input asp-for="EntState" class="form-control" required />
                            <span asp-validation-for="EntState" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EntZipCode">Zip Code</label>
                            <input asp-for="EntZipCode" class="form-control" required />
                            <span asp-validation-for="EntZipCode" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EntPhoneNumber">Phone Number</label>
                            <input asp-for="EntPhoneNumber" class="form-control" required />
                            <span asp-validation-for="EntPhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EntEmailAddress">Email</label>
                            <input asp-for="EntEmailAddress" class="form-control" required />
                            <span asp-validation-for="EntEmailAddress" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EntWebPage">Website</label>
                            <input asp-for="EntWebPage" class="form-control" />
                            <span asp-validation-for="EntWebPage" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EntSsn">Social Security Number (pls don't share this!)</label>
                            <input asp-for="EntSsn" class="form-control" required />
                            <span asp-validation-for="EntSsn" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DateEntered">Date Entered</label>
                            <input asp-for="DateEntered" class="form-control" required />
                            <span asp-validation-for="DateEntered" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </form>

                    <a asp-controller="Home" asp-action="Details" asp-route-id="@Model.EntertainerId" class="btn btn-light">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>

